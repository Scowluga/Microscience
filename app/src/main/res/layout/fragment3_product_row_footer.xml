<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/design_size"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginRight="@dimen/design_margin_right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@color/background">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/design_icon_margin"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_search"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <EditText
            android:id="@+id/product_query"
            android:hint="Click here"
            android:inputType="text"
            style="@style/largeText"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            />

        <Button
            android:id="@+id/product_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:drawableRight="@drawable/icon_send"
            android:layout_gravity="end"/>
    </LinearLayout>

    <include
        layout="@layout/fragment0_contact_footer"/>
</LinearLayout>