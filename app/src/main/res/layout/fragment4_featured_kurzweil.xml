<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scowluga.android.microscience.featured.FeaturedKurzweil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/featured_kurzweil"/>

        <LinearLayout
            android:layout_margin="@dimen/marginOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kurzweil 3000 Web + Firefly"
                style="@style/mediumText"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K3000+firefly is educational technology that brings all pieces of the literacy puzzle together with one easy, proven solution to ensure instruction and learning become personal â€” and meaningful progress becomes possible."
                style="@style/infoText"/>
            <Button
                android:id="@+id/kurzweil_launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn more"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
