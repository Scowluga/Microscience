<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
    </style>

    <!--RANDOM DIMENSIONS-->

    <dimen name="design_margin_right">
        12dp
    </dimen>

    <dimen name="design_size">
        60dp
    </dimen>

    <dimen name="design_icon_margin">
        15dp
    </dimen>

    <!-- FOR FRAGMENTS LAYOUTS -->

    <dimen name="marginOut">
        8dp
    </dimen>

    <style name="LayoutMargins">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:layout_marginLeft">@dimen/marginOut</item>
        <item name="android:layout_marginRight">@dimen/marginOut</item>
        <item name="android:layout_marginBottom">@dimen/marginOut</item>
    </style>


    <!-- TEXT DISPLAY STYLES -->
    <style name="titleText">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="accentText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="small_margin_text">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="infoText">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <!--BUTTONS -->

    <style name="socialButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="linkButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>
